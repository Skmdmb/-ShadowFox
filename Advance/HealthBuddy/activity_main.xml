<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="#F5F5F5"> <TextView
    android:id="@+id/appTitle"
    android:text="HealthBuddy"
    android:textSize="30sp"
    android:textStyle="bold"
    android:textColor="#3F51B5" android:layout_marginTop="24dp"
    android:layout_marginBottom="48dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp" app:cardElevation="8dp" app:contentPadding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/stepCountLabel"
                android:text="Today's Progress"
                android:textSize="18sp"
                android:textColor="#616161"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stepCountText"
                android:text="0" android:textSize="72sp"
                android:textStyle="bold"
                android:textColor="#3F51B5"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="STEPS"
                android:textSize="16sp"
                android:textColor="#9E9E9E"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/goalText"
                android:text="Target: 5000 Steps"
                android:textSize="18sp"
                android:textColor="#4CAF50" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/goalAchievedText"
        android:text="ðŸŽ‰ Goal Achieved! Keep it up!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:visibility="gone"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/setGoalBtn"
            android:text="Set Goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:backgroundTint="#FF9800" app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/viewStatsBtn"
            android:text="View Stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:paddingVertical="14dp"
            android:backgroundTint="#3F51B5" app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/switchThemeBtn"
            android:text="Switch Theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Button.Borderless.Colored" android:textColor="#616161"/>

    </LinearLayout>

</LinearLayout>